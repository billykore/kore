{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "Todo List Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 3000,
  "endpoints": [
    {
      "endpoint": "/api/v1/todos",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/todos",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "disable_host_sanitize": false,
          "host": [
            "http://localhost:8000"
          ]
        }
      ],
      "input_query_strings": [
        "isDone"
      ]
    },
    {
      "endpoint": "/api/v1/todos",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/todos",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "disable_host_sanitize": false,
          "host": [
            "http://localhost:8000"
          ]
        }
      ]
    },
    {
      "endpoint": "/api/v1/todos/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/todos/{id}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "disable_host_sanitize": false,
          "host": [
            "http://localhost:8000"
          ]
        }
      ]
    },
    {
      "endpoint": "/api/v1/todos/{id}",
      "method": "PUT",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/todos/{id}",
          "encoding": "json",
          "sd": "static",
          "method": "PUT",
          "disable_host_sanitize": false,
          "host": [
            "http://localhost:8000"
          ]
        }
      ]
    },
    {
      "endpoint": "/api/v1/todos/{id}",
      "method": "DELETE",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/todos/{id}",
          "encoding": "json",
          "sd": "static",
          "method": "DELETE",
          "disable_host_sanitize": false,
          "host": [
            "http://localhost:8000"
          ]
        }
      ]
    }
  ]
}