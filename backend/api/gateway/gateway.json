{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "Monorepo Gateway",
  "timeout": "10000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 3000,
  "extra_config": {
    "telemetry/logging": {
      "level": "ERROR",
      "syslog": false,
      "stdout": true
    },
    "security/cors": {
      "allow_origins": [
        "*"
      ],
      "allow_methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ],
      "expose_headers": [
        "Content-Length",
        "Content-Type"
      ],
      "allow_headers": [
        "Accept-Language"
      ],
      "max_age": "12h",
      "allow_credentials": false
    }
  },
  "endpoints": [
    {
      "endpoint": "/api/v1/login",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/login",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://auth-service.default.svc.cluster.local:8000"
          ],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "auth/signer": {
          "alg": "HS256",
          "jwk_local_path": "symmetric.json",
          "keys_to_sign": [
            "accessToken",
            "expiredTime"
          ],
          "kid": "drPB_Wlr8gCYSaNp4GxJi6w61b8N1oosZQ8sxD9R1Is",
          "disable_jwk_security": true
        }
      }
    },
    {
      "endpoint": "/api/v1/products",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/products",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "disable_host_sanitize": false,
          "host": [
            "http://product-service.default.svc.cluster.local:8000"
          ]
        }
      ],
      "input_query_strings": [
        "limit",
        "start"
      ]
    },
    {
      "endpoint": "/api/v1/products/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/products/{id}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "disable_host_sanitize": false,
          "host": [
            "http://product-service.default.svc.cluster.local:8000"
          ]
        }
      ]
    },
    {
      "endpoint": "/api/v1/categories",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/categories",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "disable_host_sanitize": false,
          "host": [
            "http://product-service.default.svc.cluster.local:8000"
          ]
        }
      ]
    },
    {
      "endpoint": "/api/v1/discounts",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/discounts",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "disable_host_sanitize": false,
          "host": [
            "http://product-service.default.svc.cluster.local:8000"
          ]
        }
      ]
    },
    {
      "endpoint": "/api/v1/carts",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/carts",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "disable_host_sanitize": false,
          "host": [
            "http://product-service.default.svc.cluster.local:8000"
          ]
        }
      ],
      "input_query_strings": [
        "limit",
        "start"
      ],
      "input_headers": [
        "Authorization"
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_local_path": "symmetric.json",
          "disable_jwk_security": true,
          "cache": false,
          "operation_debug": true
        }
      }
    },
    {
      "endpoint": "/api/v1/carts",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/carts",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "disable_host_sanitize": false,
          "host": [
            "http://product-service.default.svc.cluster.local:8000"
          ]
        }
      ],
      "input_headers": [
        "Authorization"
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_local_path": "symmetric.json",
          "disable_jwk_security": true,
          "cache": false,
          "operation_debug": true
        }
      }
    }
  ]
}