{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "Monorepo Gateway",
  "timeout": "10000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 3000,
  "extra_config": {
    "telemetry/logging": {
      "level": "ERROR",
      "syslog": false,
      "stdout": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/api/v1/todos",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/todos",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "disable_host_sanitize": false,
          "host": [
            "http://monorepo-todo-service.default.svc.cluster.local:8000"
          ]
        }
      ],
      "input_query_strings": [
        "isDone"
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_local_path": "symmetric.json",
          "disable_jwk_security": true,
          "cache": false,
          "operation_debug": true
        }
      }
    },
    {
      "endpoint": "/api/v1/todos",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/todos",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "disable_host_sanitize": false,
          "host": [
            "http://monorepo-todo-service.default.svc.cluster.local:8000"
          ]
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_local_path": "symmetric.json",
          "disable_jwk_security": true,
          "cache": false,
          "operation_debug": true
        }
      }
    },
    {
      "endpoint": "/api/v1/todos/{id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/todos/{id}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "disable_host_sanitize": false,
          "host": [
            "http://monorepo-todo-service.default.svc.cluster.local:8000"
          ]
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_local_path": "symmetric.json",
          "disable_jwk_security": true,
          "cache": false,
          "operation_debug": true
        }
      }
    },
    {
      "endpoint": "/api/v1/todos/{id}",
      "method": "PUT",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/todos/{id}",
          "encoding": "json",
          "sd": "static",
          "method": "PUT",
          "disable_host_sanitize": false,
          "host": [
            "http://monorepo-todo-service.default.svc.cluster.local:8000"
          ]
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_local_path": "symmetric.json",
          "disable_jwk_security": true,
          "cache": false,
          "operation_debug": true
        }
      }
    },
    {
      "endpoint": "/api/v1/todos/{id}",
      "method": "DELETE",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/todos/{id}",
          "encoding": "json",
          "sd": "static",
          "method": "DELETE",
          "disable_host_sanitize": false,
          "host": [
            "http://monorepo-todo-service.default.svc.cluster.local:8000"
          ]
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "HS256",
          "jwk_local_path": "symmetric.json",
          "disable_jwk_security": true,
          "cache": false,
          "operation_debug": true
        }
      }
    },
    {
      "endpoint": "/api/v1/login",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/login",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://monorepo-auth-service.default.svc.cluster.local:8000"
          ],
          "disable_host_sanitize": false
        }
      ],
      "extra_config": {
        "auth/signer": {
          "alg": "HS256",
          "jwk_local_path": "symmetric.json",
          "keys_to_sign": [
            "accessToken",
            "expiredTime"
          ],
          "kid": "drPB_Wlr8gCYSaNp4GxJi6w61b8N1oosZQ8sxD9R1Is",
          "disable_jwk_security": true
        }
      }
    },
    {
      "endpoint": "/api/v1/otp/send",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/otp/send",
          "encoding": "json",
          "sd": "static",
          "method": "POST",
          "host": [
            "http://monorepo-otp-service.default.svc.cluster.local:8000"
          ],
          "disable_host_sanitize": false
